<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    app:strokeColor="@android:color/transparent"
    app:cardBackgroundColor="@color/md_theme_surfaceContainerHighest">

    <ImageView
        android:id="@+id/image_reception"
        android:layout_width="@dimen/card_img_size"
        android:layout_height="@dimen/card_img_size"
        android:layout_margin="@dimen/_8dp"
        android:contentDescription="@string/login_screen_image_description"
        android:src="@drawable/ic_reception"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_date_reception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2025-09-12 09:12"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginEnd="@dimen/_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_subtitle_reception"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_title_reception"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="1021-TK-0001A"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/image_reception"
        app:layout_constraintEnd_toStartOf="@+id/text_date_reception"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_subtitle_reception"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_title_reception"
        app:layout_constraintStart_toEndOf="@id/image_reception"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/_16dp"
        tools:text="203981 Litros"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_divider"
        app:layout_constraintStart_toStartOf="@+id/image_reception"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>